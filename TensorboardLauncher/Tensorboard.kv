#:kivy 2.1.0

<LauncherGUI>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        size_hint: 1.0, 0.1

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10

            TextInput:
                id: directory_input
                hint_text: "Enter directory path"
                background_color: (0.95, 0.95, 0.95, 1)
                foreground_color: (0, 0, 0, 1)
                size_hint: 0.8, None
                height: 40

            Button:
                text: "Browse"
                size_hint: 0.2, None
                height: 40
                on_press: app.select_directory(self)

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                background_color: (0.3, 0.7, 0.5, 1)
                font_size: 16
                size_hint_x: 0.5
                width: 200
                text: "Start TensorBoard"
                on_press: app.start_tensorboard(directory_input.text)

            Button:
                background_color: (0.3, 0.7, 0.5, 1)
                font_size: 16
                size_hint_x: 0.5
                width: 200
                text: "Stop TensorBoard"
                on_press: app.stop_tensorboard()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)