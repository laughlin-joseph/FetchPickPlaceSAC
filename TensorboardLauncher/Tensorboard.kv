#:kivy 2.1.0
<LauncherGUI>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10
        pos_hint: {'y': 0.3}

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            TextInput:
                id: directory_input
                hint_text: "Enter directory path"
                background_color: (0.95, 0.95, 0.95, 1)
                foreground_color: (0, 0, 0, 1)
                size_hint: 0.8, None
                height: 40

            Button:
                text: "Browse"
                size_hint: 0.2, None
                height: 40
                on_press: app.select_directory()

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: 1

            Button:
                background_color: (0.3, 0.7, 0.5, 1)
                font_size: 16
                size_hint_x: 0.5
                width: 200
                text: "Start TensorBoard"
                on_press: app.start_tensorboard(directory_input.text)

            Button:
                background_color: (0.3, 0.7, 0.5, 1)
                font_size: 16
                size_hint_x: 0.5
                width: 200
                text: "Stop TensorBoard"
                on_press: app.stop_tensorboard()
